<%- include("../../partials/examplesHead") %>

<%- include("../../partials/exampleInfo") %>

<form class="eg" action="" method="post" data-busy="form">
  <% if(example.Forms && example.Forms[0].FormName) { %>
    <%- example.Forms[0].FormName %>
  <% } %>
  
    <div class="form-group">
        <label for="startingView"><%= example.Forms[0].Inputs[0].InputName %></label>
        <select id="startingView" name="startingView" class="form-control">
                <option value="Tagger" selected>Tagging view</option>
                <option value="Prepare">Prepare view</option>
        </select>
    </div>
    <div class="form-group">
      <label for="signerEmail"><%= example.Forms[0].Inputs[1].InputName %></label>
      <input type="email" class="form-control" id="signerEmail" name="signerEmail"
             aria-describedby="emailHelp" placeholder="<%= example.Forms[0].Inputs[1].InputName %>" required
             value="<%= locals.dsConfig.signerEmail %>">
      <small id="emailHelp" class="form-text text-muted"><%= locals.manifest.SupportingTexts.HelpingTexts.EmailWontBeShared %></small>
    </div>
    <div class="form-group">
      <label for="signerName"><%= example.Forms[0].Inputs[2].InputName %></label>
      <input type="text" class="form-control" id="signerName" placeholder="<%= example.Forms[0].Inputs[2].InputName %>" name="signerName"
             value="<%= locals.dsConfig.signerName %>" required>
    </div>
    <div class="form-group">
      <label for="ccEmail"><%= example.Forms[0].Inputs[3].InputName %></label>
      <input type="email" class="form-control" id="ccEmail" name="ccEmail"
             aria-describedby="emailHelp" placeholder="<%= example.Forms[0].Inputs[3].InputName %>" required
      <small id="emailHelp" class="form-text text-muted"><%= locals.manifest.SupportingTexts.HelpingTexts.CCEmailShouldDifferFromSigner %></small>
    </div>
    <div class="form-group">
      <label for="ccName"><%= example.Forms[0].Inputs[4].InputName %></label>
      <input type="text" class="form-control" id="ccName" placeholder="<%= example.Forms[0].Inputs[4].InputName %>" name="ccName"
             required>
    </div>
    <input type="hidden" name="_csrf" value="<%- csrfToken %>">
    <%- include("../../partials/submitButton") %>
  </form>
  
<%- include("../../partials/examplesFoot") %>
