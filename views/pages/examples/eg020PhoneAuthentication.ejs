<%- include("../../partials/examplesHead") %>

<%- include("../../partials/exampleInfo") %>

<form class="eg" action="" method="post" data-busy="form">
  <% if(example.Forms && example.Forms[0].FormName) { %>
    <%- example.Forms[0].FormName %>
  <% } %>
  
  <div class="form-group">
    <label for="countryCode"><%= example.Forms[0].Inputs[0].InputName %></label>
    <input type="text" class="form-control" id="countryCode" placeholder="<%= example.Forms[0].Inputs[0].InputPlaceholder %>" name="countryCode"
           required>
  </div>
  <div class="form-group">
    <label for="phoneNumber"><%= example.Forms[0].Inputs[1].InputName %></label>
    <input type="text" class="form-control" id="phoneNumber" placeholder="<%= example.Forms[0].Inputs[1].InputPlaceholder %>" name="phoneNumber"
           required>
  </div>
  <div class="form-group">
      <label for="signerEmail"><%= example.Forms[0].Inputs[2].InputName %></label>
      <input type="email" class="form-control" id="signerEmail" name="signerEmail"
             aria-describedby="emailHelp" placeholder="<%= example.Forms[0].Inputs[2].InputPlaceholder %>" required>
      <small id="emailHelp" class="form-text text-muted"><%= locals.manifest.SupportingTexts.HelpingTexts.EmailWontBeShared %></small>
    </div>
    <div class="form-group">
      <label for="signerName"><%= example.Forms[0].Inputs[3].InputName %></label>
      <input type="text" class="form-control" id="signerName" placeholder="<%= example.Forms[0].Inputs[3].InputPlaceholder %>" name="signerName"
             required>
    </div>
    <input type="hidden" name="_csrf" value="<%- csrfToken %>">
    <%- include("../../partials/submitButton") %>
</form>

<%- include("../../partials/examplesFoot") %>
